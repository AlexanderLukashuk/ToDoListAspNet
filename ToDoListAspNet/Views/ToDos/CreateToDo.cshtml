@model ToDoListAspNetLibrary.Models.Entities.ToDo

@{
    ViewData["Title"] = "CreateToDo";
}

<form asp-action="CreateToDo" id="form-action" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Id" type="hidden" class="form-control" />
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger">Name is required</span>

            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger">Description is required</span>

            <label asp-for="DeadLine" class="form-label"></label>
            <input asp-for="DeadLine" class="form-control" />
            <span asp-validation-for="DeadLine" class="text-danger">Deadline is required</span>
        </div>
    </div>

    <input type="hidden" name="CategoryId" value="@ViewBag.CategoryId" />
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success create-btn return-btn category-create todo-create-btn" value="Add Todo" />
        </div>
    </div>
</form>

<div class="button-group">
    <form action="/Category" method="get">
        <button class="btn btn-primary return-btn category-create todo-create">Return to the main page</button>
    </form>
</div>